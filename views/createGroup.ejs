
<%- include("parts/header") %>
<%- include("parts/sidebar") %>


<div class="container text-center">
    
    <% if(friends.length < 2){ %>
        <div class="con m-auto">
           <p class="alert alert-danger">You Don't Have Enough Friends To Add Them To The Group</p>
        </div>
    <% }else{ %>
            <form action="/create-group" class="createGroupForm m-auto" method="post" enctype="multipart/form-data">

                <div class="form-group my-4">
                  <input type="text" class="form-control" name="groupName" placeholder="Group Name" maxlength="15" required>
                </div>
        
                <div class="friends" id="friends">
                            <% let count = 1 %>
                            <% for(let friend of friends){ %>
                                <label class="friend" for="flexCheckDefault<%=count%>">
                                    <div class="main-info">
                                                <img src="/<%= friend.image %>" alt="">
                                                 <h1 class="text-capitalize"><%= friend.username %></h1>
                                    </div>
                                            <input class="form-check-input m-0" type="checkbox" name="friendsToGroup" value="<%= friend.id %>" id="flexCheckDefault<%=count%>">
                                 </label>
                                 <% count++ %>
                                
                                 <% } %>
                                 
                                </div>
                                <input class="form-control mt-4" name="groupImage" type="file" id="formFileDisabled" />
                                
                                
                                <button type="submit" class="groupBtn btn btn-primary d-flex justify-content-center align-items-center m-auto mt-4">Create <i class="fa-solid fa-plus text-white"></i></button>
                                
                            </form>
                            <p class="alert alert-danger m-auto mt-4 w-50 h6">Please Select 2 Friends At Least</p>
                    <% } %>

</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/sockets/init.js"></script>
<%- include("parts/scripts") %>
</body>
</html>